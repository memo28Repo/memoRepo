{
  "name": "@memo28/rollup",
  "version": "1.0.0",
  "private": true,
  "description": "rollup build helper",
  "main": "./lib/index",
  "module": "./dist/index",
  "types": "./dts/index.d.ts",
  "scripts": {
    "build": "pnpm build:cjs && pnpm build:es",
    "build:cjs": "tsc --module commonjs --rootDir ./src --outDir ./lib --experimentalDecorators true",
    "build:es": "tsc --module commonjs --rootDir ./src --outDir ./dist --experimentalDecorators true",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "files": [
    "./dist",
    "./lib",
    "./dts"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "keywords": [
    "rollup",
    "build",
    "typescript",
    "javascript"
  ],
  "author": "hooks_28",
  "license": "MIT",
  "dependencies": {
    "@memo28/types": "^1.1.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@rollup/plugin-url": "^8.0.1",
    "plugin-url": "link:@types/@rollup/plugin-url",
    "rollup": "^3.12.0",
    "rollup-plugin-notify": "^1.1.0",
    "rollup-plugin-sizes": "^1.0.5"
  }
}